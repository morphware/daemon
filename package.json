{
  "name": "Morphware-Wallet",
  "version": "0.0.1",
  "description": "",
  "main": "electron.js",
  "scripts": {
    "start-frontend": "npm --prefix frontend start",
    "start-backend": "npm --prefix backend start",
    "build": "node build.js",
    "dev": "concurrently -k \"BROWSER=none npm run start-frontend\" \"npm:electron\" \"npm run start-backend\"",
    "windev": "concurrently -k \"cross-env BROWSER=none npm run start-frontend\" \"npm:electron\" \"npm run start-backend\"",
    "electron": "wait-on tcp:3000 && electron .",
    "postinstall": "npm --prefix frontend install && npm --prefix backend install && electron-builder install-app-deps",
    "flatpak64": "electron-installer-flatpak --src dist/morphware-linux-x64/ --dest dist/installers/ --arch x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morphware/daemon.git"
  },
  "author": {
    "name": "Morphware Engineering",
    "email": "engineering@morphware.com"
  },
  "bugs": {
    "url": "https://github.com/morphware/daemon/issues"
  },
  "homepage": "https://github.com/morphware/daemon#readme",
  "devDependencies": {
    "concurrently": "^6.2.1",
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7",
    "electron-installer-flatpak": "^0.8.0",
    "electron-is-dev": "^2.0.0",
    "electron-packager": "^15.4.0",
    "extend": "^3.0.2",
    "fs-extra": "^10.0.0",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.electron.morphware",
    "productName": "Morphware Wallet",
    "npmRebuild": true,
    "copyright": "Copyright Â© 2021 Morphware, LLC",
    "directories": {
      "app": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
